{
    "tabWidth": 4,
    "useTabs": false,
    "proseWrap": "always",
    "semi": true,
    "overrides": [
        {
            "files": ["*.md", "*.mdx"],
            "options": {
                "printWidth": 80,
                "proseWrap": "always",
                "tabWidth": 2
            }
        },
        {
            "files": ["*.json", ".eslintrc", ".prettierrc"],
            "options": {
                "trailingComma": "none"
            }
        }
    ]
}
